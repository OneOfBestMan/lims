@using Model.Sample;
@{
    ViewBag.Title = "SamplingSheet";
    Layout =null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>样品详情</title>
    <link href="/Skins/admin/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <script src="/Skins/js/jquery-1.10.2.js"></script>
    <script src="~/Skins/artDialog/dist/dialog.js"></script>
    <script src="~/Skins/artDialog/dist/dialog-plus.js"></script>
    <link href="/skins/admin/vendor/datetimepicker/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <script src="/skins/admin/vendor/datetimepicker/js/bootstrap-datetimepicker.js"></script>
</head>
<body>
    <div style="width:980px;">
        <div role="form">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header" style="text-align:center;margin:0px 0px 10px 0px;">分样单</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>

            <!--实验计划-->
            <div class="panel panel-default">
                <!-- /.panel-heading -->
                <div class="panel-body">
                        <table id="tab_1" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>样品编号</th>
                                    <th>样品名称</th>
                                    <th>检验项目及标准</th>
                                    <th style="width:100px;">存储条件</th>
                                    <th style="width:100px;">测试部门</th>
                                    <th style="width:100px;">紧急程度</th>
                                    <th style="width:75px;">备注</th>
                                </tr>
                            </thead>
                            <tbody >
                                @{
                                    var SamplingSheetList = ViewBag.SamplingSheetList as List<E_SamplingSheet>;
                                    foreach (var item in SamplingSheetList)
                                    {
                                        <tr>
                                            <td>@item.samplenum</td>
                                            <td>@item.samplename</td>
                                            <td>@item.checkprojectandstandard</td>
                                            <td>@item.storcondition</td>
                                            <td>@item.checkdepar</td>
                                            <td>@item.urgentlevel</td>
                                            <td>@item.remarks</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                </div>
                <!-- /.panel-body -->
            </div>

            <!--提交按钮-->
            <div style="width:100%;text-align:center;">
                <a href="/sample/exportsamplingsheet?sampleids=@ViewBag.sampleids" class="btn btn-primary" onclick="CreateSamplingSheet()">生成分样单</a>
            </div>

        </div>
    </div>
</body>
</html>


