<script type="text/javascript">
    window.onload = function () {
        $(".hy_lf").css("height", $(".hy_nr").innerHeight());
    }

    $(document).ready(function () {
        $(".hy_lf ul li").click(function () {
            $(this).addClass("on");
            $(this).siblings().removeClass("on");
            $(this).find(".hy_ej").slideToggle(function () {
                if ($(this).is(':hidden')) {
                    $(this).parent("li").removeClass("on");
                }
            });
            $(this).siblings().find(".hy_ej").slideUp();
        });
    });
</script>

