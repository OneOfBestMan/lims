@{
    ViewBag.Title = "OriginalRecordList";
    Layout = "~/Views/Share/_LayOut.cshtml";
    var ePageParameter = ViewBag.ePageParameter == null ? new E_PageParameter() : (E_PageParameter)ViewBag.ePageParameter;
}

